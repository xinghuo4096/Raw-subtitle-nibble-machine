{
  "python.testing.pytestArgs": ["tests"],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.linting.pylintEnabled": true,

  "python.analysis.extraPaths": ["./SrtMergeBox/src"],

  "Codegeex.Chat.fontSize": 15,
  "Codegeex.CandidateNum": "3 (slow)",
  "Codegeex.CompletionModel": "CodeGeeX Pro[Beta]",
  "Codegeex.CommitMessageStyle": "ConventionalCommits",
  "[json]": {
    "editor.wordWrap": "on"
  },


  "[python]": {
    "editor.formatOnSave": true,
    "editor.wordWrapColumn": 79,
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "isort.args":["--profile", "black"],
  "files.autoSave": "afterDelay",
  "editor.fontSize": 16,
  "python.createEnvironment.contentButton": "show",
  "python.missingPackage.severity": "Information",
  "black-formatter.args": [
    "[\"--line-length\", \"79\"]"
  ]
}
